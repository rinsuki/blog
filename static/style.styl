article
    *
        word-break: break-all
    .title
        margin 3px 0
        a
            color #333
            text-decoration none
    .article-meta
        > span:not(:last-child)::after
            content "/"
            margin: 0 0.25em
        .glyphicon
            margin-right 0.25em
        .article-tags-after:not(:last-child)::after
            content ","
            margin-left 0.1em
            margin-right 0.25em
    
.pagination_wrapper
    text-align: center

img
    max-width: 100%

.container article
    margin-left: -16px
    margin-right: -16px

li
    margin-top: 0.5em

// 目指せ、トップアイドル!
header.top
    background: #222
    z-index: 0
    margin-bottom: 2em
    .container
        height: 30vw
        min-height: 120px
        max-height: 240px
        max-width: 1000px
        position: relative
        .gray-filter
            background: black
            background: url(shibuyarin/2017/10-halloweencode/0.jpg) no-repeat
            background-position: center 25%
            opacity:0.5
            position:absolute
            top:0
            bottom:0
            left:0
            right:0
            background-size: cover
        .contents
            position: absolute
            top: 0
            bottom: 0
            left: 0
            right: 0
            font-size: 20px
            a
                display: inline-block
                color: #eee
                padding: 1em
                padding-right: 0
            .bottom
                position: absolute
                bottom: 0
                opacity: 0.9
                font-size: 90%

.navbar-hidarisita
    position:absolute
    left:15px
    top:76px
    color:#eee
    font-size:80%

body
    z-index:-999

.share-buttons .btn
    display: inline-block
    margin-right: 1em

h1, h2, h3
    &::before
        display: block
        float: left
        width: 10rem
        text-align: right
        padding-right: 3rem
        margin-left: -10rem
        user-select: none
        opacity: 0.5

h1::before
    content: "#"
h2::before
    content: "##"
h3::before
    content: "###"

.hljs
    .hljs-comment
        font-style: normal

.hatena-star-comment-container
    display: none